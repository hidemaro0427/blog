<div class="contents row" >
    <% @posts.each do |post| %>
    <%= simple_format(post.text) %>
    <% if user_signed_in? && current_user.id == post.user_id %>
        <div class="more">
          
          <ul class="more_list">
            <li>
              <%= link_to '削除', "/posts/#{post.id}", method: :delete %>
            </li>
          </ul>
        </div>
      <% end %>
      <% end %>
    <%= paginate(@posts) %>
</div>
